{
  "name": "isolated-externals-plugin",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "npm run lint && npm run build && jest",
    "build": "tsc && cd src/util && tsc",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx ./src",
    "prepublishOnly": "npm run build",
    "startExamples": "npm run build && webpack-dev-server --config ./example-app/webpack.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WTW-IM/isolated-externals-plugin.git"
  },
  "keywords": [
    "Web Components",
    "webpack",
    "webpack4",
    "webpack-plugin",
    "isolated",
    "externals",
    "embedded"
  ],
  "author": "Steve Matney",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/WTW-IM/isolated-externals-plugin/issues"
  },
  "homepage": "https://github.com/WTW-IM/isolated-externals-plugin#readme",
  "lint-staged": {
    "src/**/*.(j|t)s?(x)": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.md": [
      "prettier --write --parser markdown"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "peerDependencies": {
    "webpack": "^4.0.0"
  },
  "dependencies": {
    "babel-cli": "^6.26.0",
    "randomstring": "^1.1.5",
    "webpack-sources": "^1.4.3"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.9.0",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@types/jest": "^25.2.1",
    "@types/randomstring": "^1.1.6",
    "@types/webpack": "^4.41.10",
    "@types/webpack-sources": "^0.1.7",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "conventional-changelog-eslint": "^3.0.4",
    "depcheck": "^0.9.2",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-react": "^7.20.3",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^4.2.5",
    "jest": "^25.4.0",
    "lint-staged": "^10.0.8",
    "prettier": "1.19.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "semantic-release": "^17.0.4",
    "typescript": "^3.8.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  }
}
